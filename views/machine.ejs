<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
        function Search() {
            var DevNo = document.getElementsByName('SearchDevNo')[0].value;
            var regex = /^([A-Z0-9])+$/;
            if (DevNo.length == 0) {
                window.location.href = "/machine";
                return true;
            }
            if (!regex.test(DevNo)) {
                return false;
            }
            window.location.href = "/machine/search?DevNo=" + DevNo;
        }

        function History(DevNo) {
            window.location.href = "/machine/machineHistory?DevNo=" + DevNo;
        }

        function Chart(DevNo) {
            window.location.href = "/machine/machineChart?DevNo=" + DevNo;
        }

        function Edit(DevNo) {
            window.location.href = "/machine/machineEdit?DevNo=" + DevNo;
        }

        function Delete(DevNo, AccountNo) {
            if (!DevNo || !AccountNo) {
                return;
            }
            var rs = confirm('確定要刪除?');
            if (rs) {
                window.location.href = "/machine/machineDelete?DevNo=" + DevNo + "&AccountNo=" + AccountNo;
            }
        }

        function Next(index, length) {
            if (index >= length - 1) {
                window.location.href = "/machine?index=0";
            } else {
                window.location.href = "/machine?index=" + (++index);
            }

        }

        function Past(index, length) {
            if (index - 1 < 0) {
                window.location.href = "/machine?index=" + (length - 1);
            } else {
                window.location.href = "/machine?index=" + (index - 1);
            }
        }
    </script>
</head>

<body>
    <% if (locals.Name) { %>
    <table border="0" align="right">
        <tr>
            <th>
                <h3>您好, <%= Name %></h1>
            </th>
            <th><a href="/logout">登出</a></th>
        </tr>
    </table>
    <% } %>
    <table border="0" align="center">
        <tr>
            <% if (locals.SuperUser == 1) { %>
            <th><a href="/firmware">OTA</a></th>
            <th><a href="/serial">白名單</a></th>
            <th><a href="/payment">加值卡</a></th>
            <% } %>
            <th><a href="/user">用戶</a></th>
            <th><a href="/machine">機台</a></th>
        </tr>
    </table>
