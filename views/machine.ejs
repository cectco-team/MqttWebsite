    <h1>機台 - 列表</h1>
    <input type="text" name="SearchDevNo" placeholder="搜尋產品序號" value="<%= DevNo %>" />
    <input type="button" name="search" value="搜尋" class="btn" onclick="Search();" />
    <table class="table">
        <tr>
            <th>編號</th>
            <th>機台名稱</th>
            <th>所有者</th>
            <th>序號</th>
            <th>版本號</th>
            <th>狀態</th>
        </tr>
        <% for ( var i = 0 ; i < data.length ; i++){ %>
        <tr>
            <td>
                <%= i+1 %>
            </td>
            <td>
                <%= data[i].DevName  %>
            </td>
            <td>
                <%= data[i].Account  %>
            </td>
            <td>
                <%= data[i].DevNo  %>
            </td>
            <td>
                <%= data[i].VerNum  %>
            </td>
            <td>
                <% if(data[i].Status > 0) { %>
                連線            
                <% } %>
            </td>
            <td>
                <input type="button" name="history" value="紀錄" class="btn"
                    onclick="History('<%= data[i].DevNo  %>');" />
                <input type="button" name="chart" value="圖表" class="btn" onclick="Chart('<%= data[i].DevNo  %>');" />
                <% if (locals.SuperUser != 0) { %>
                <input type="button" name="edit" value="修改" class="btn" onclick="Edit('<%= data[i].DevNo  %>');" />
                <input type="button" name="delete" value="刪除" class="btn"
                    onclick="Delete('<%= data[i].DevNo %>','<%= data[i].AccountNo %>');" />
                <% } %>
            </td>
        </tr>
        <% } %>
    </table>
</body>

</html>